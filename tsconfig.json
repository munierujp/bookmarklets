{
  "extends": [    
    // https://github.com/tsconfig/bases/blob/main/bases/strictest.json
    "@tsconfig/bases/strictest",
    // https://github.com/tsconfig/bases/blob/main/bases/node24.json
    "@tsconfig/bases/node24"
  ],
  "compilerOptions": {
    "lib": [
      // https://github.com/tsconfig/bases/blob/main/bases/node24.json
      "es2024",
      // https://github.com/tsconfig/bases/blob/main/bases/node24.json
      "ESNext.Array",
      // https://github.com/tsconfig/bases/blob/main/bases/node24.json
      "ESNext.Collection",
      // https://github.com/tsconfig/bases/blob/main/bases/node24.json
      "ESNext.Iterator",
      // https://github.com/tsconfig/bases/blob/main/bases/node24.json
      "ESNext.Promise",
      "dom"
    ],
    // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping#node-24
    "module": "nodenext",
    // https://github.com/tsconfig/bases/blob/main/bases/node24.json
    "target": "es2024"
  }
}
